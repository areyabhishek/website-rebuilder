{
  "name": "portfolio-rebuilder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run db:generate:prod && next build",
    "build:local": "npm run db:generate && next build",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:generate:prod": "prisma generate --schema=./prisma/schema.production.prisma",
    "db:push": "prisma db push",
    "db:push:prod": "prisma db push --schema=./prisma/schema.production.prisma",
    "db:studio": "prisma studio",
    "db:studio:prod": "prisma studio --schema=./prisma/schema.production.prisma",
    "setup": "npm install && prisma generate && prisma db push",
    "postinstall": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run db:generate:prod; else npm run db:generate; fi"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@mendable/firecrawl-js": "^4.3.8",
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.17.1",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "prisma": "^6.17.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
