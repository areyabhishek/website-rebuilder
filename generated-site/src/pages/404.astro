---
const title = "Page Not Found | DOULAS by the BAY";
const description = "The page you're looking for doesn't exist. Return to our homepage to find doula services in the San Francisco Bay Area.";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
</head>
<body>
  <header>
    <nav>
      <div class="nav-container">
        <h1 class="logo"><a href="/">DOULAS by the BAY</a></h1>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/courses-cart">Courses</a>
        </div>
      </div>
    </nav>
  </header>

  <main class="error-page">
    <div class="error-content">
      <div class="error-visual">
        <img src="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=500&h=400&fit=crop" alt="Supportive care">
      </div>
      
      <div class="error-text">
        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p>We're sorry, but the page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.</p>
        
        <div class="error-actions">
          <a href="/" class="primary-button">Go to Homepage</a>
          <a href="/contact" class="secondary-button">Contact Us</a>
        </div>
        
        <div class="helpful-links">
          <h3>Looking for something specific?</h3>
          <ul>
            <li><a href="/">Learn about our doula services</a></li>
            <li><a href="/about">Meet our team</a></li>
            <li><a href="/contact">Get in touch with us</a></li>
            <li><a href="/courses-cart">Browse our courses</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <section class="support-cta">
      <h2>Need Support?</h2>
      <p>Our team is here to help you navigate your journey to parenthood.</p>
      <a href="/contact" class="cta-button">Contact Our Team</a>
    </section>
  </main>

  <footer>
    <div class="footer-content">
      <div class="footer-section">
        <h3>DOULAS by the BAY</h3>
        <p>Supporting families in the San Francisco Bay Area since 2009.</p>
      </div>
      <div class="footer-section">
        <h4>Quick Links</h4>
        <a href="/">Home</a>
        <a href="/about">About Us</a>
        <a href="/contact">Contact</a>
        <a href="/courses-cart">Courses</a>
      </div>
      <div class="footer-section">
        <h4>Services</h4>
        <a href="#">Birth Support</a>
        <a href="#">Postpartum Care</a>
        <a href="#">Newborn Care</a>
      </div>
    </div>
  </footer>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      line-height: 1.6;
      color: #333;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .nav-container {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
    }

    .logo a {
      font-size: 1.5rem;
      font-weight: bold;
      color: #2c5aa0;
      text-decoration: none;
    }

    .nav-links {
      display: flex;
      gap: 2rem;
    }

    .nav-links a {
      text-decoration: none;
      color: #333;
      font-weight: 500;
      transition: color 0.3s;
    }

    .nav-links a:hover {
      color: #2c5aa0;
    }

    main {
      flex: 1;
    }

    .error-page {
      padding: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .error-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
      margin: 4rem 0;
    }

    .error-visual img {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }

    .error-text h1 {
      font-size: 6rem;
      color: #2c5aa0;
      font-weight: bold;
      margin-bottom: 1rem;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .error-text h2 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 1rem;
    }

    .error-text p {
      font-size: 1.1rem;
      color: #666;
      margin-bottom: 2rem;
      line-height: 1.7;
    }

    .error-actions {
      display: flex;
      gap: 1rem;
      margin-bottom: 3rem;
    }

    .primary-button {
      background: #2c5aa0;
      color: white;
      padding: 1rem 2rem;
      text-decoration: none;
      border-radius: 8px;
      font-weight: bold;
      transition: all 0.3s;
    }

    .primary-button:hover {
      background: #1e3f73;
      transform: translateY(-2px);
    }

    .secondary-button {
      background: transparent;
      color: #2c5aa0;
      padding: 1rem 2rem;
      text-decoration: none;
      border: 2px solid #2c5aa0;
      border-radius: 8px;
      font-weight: bold;
      transition: all 0.3s;
    }

    .secondary-button:hover {
      background: #2c5aa0;
      color: white;
      transform: translateY(-2px);
    }

    .helpful-links {
      background: #f8f9fa;
      padding: 2rem;
      border-radius: 10px;
      border-left: 4px solid #2c5aa0;
    }

    .helpful-links h3 {
      color: #2c5aa0;
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }

    .helpful-links ul {
      list-style: none;
    }

    .helpful-links li {
      margin-bottom: 0.5rem;
    }

    .helpful-links a {
      color: #666;
      text-decoration: none;
      transition: color 0.3s;
    }

    .helpful-links a:hover {
      color: #2c5aa0;
    }

    .support-cta {
      background: linear-gradient(135deg, #2c5aa0 0%, #1e3f73 100%);
      color: white;
      text-align: center;
      padding: 4rem 2rem;
      margin: 4rem 0 0 0;
    }

    .support-cta h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .support-cta p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }

    .cta-button {
      display: inline-block;
      background: white;
      color: #2c5aa0;
      padding: 1rem 2rem;
      text-decoration: none;
      border-radius: 8px;
      font-weight: bold;
      transition: all 0.3s;
    }

    .cta-button:hover {
      background: #f0f0f0;
      transform: translateY(-2px);
    }

    footer {
      background: #333;
      color: white;
      padding: 3rem 2rem 2rem;
      margin-top: auto;
    }

    .footer-content {
      max-width: 1200px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .footer-section h3,
    .footer-section h4 {
      margin-bottom: 1rem;
      color: #2c5aa0;
    }

    .footer-section a {
      display: block;
      color: #ccc;
      text-decoration: none;
      margin-bottom: 0.5rem;
      transition: color 0.3s;
    }

    .footer-section a:hover {
      color: white;
    }

    @media (max-width: 768px) {
      .nav-links {
        flex-direction: column;
        gap: 1rem;
      }

      .error-content {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
      }

      .error-text h1 {
        font-size: 4rem;
      }

      .error-text h2 {
        font-size: 2rem;
      }

      .error-actions {
        flex-direction: column;
        align-items: center;
      }

      .primary-button,
      .secondary-button {
        display: block;
        text-align: center;
        min-width: 200px;
      }

      .support-cta h2 {
        font-size: 2rem;
      }
    }

    @media (max-width: 480px) {
      .error-text h1 {
        font-size: 3rem;
      }

      .error-text h2 {
        font-size: 1.5rem;
      }

      .error-actions {
        gap: 0.5rem;
      }
    }
  </style>
</body>
</html>