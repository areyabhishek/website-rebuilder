  <style>
    :root {
      --brand: #2f4842;
      --brand-alt: #253934;
      --bg: #ffffff;
      --surface: #efefef;
      --text: #122124;
      --muted: #6e7879;
      
      --font-heading: sans-serif, sans-serif;
      --font-body: sans-serif, sans-serif;
      
      --space-0: 0px;
      --space-1: 4px;
      --space-2: 8px;
      --space-3: 16px;
      --space-4: 24px;
      --space-5: 32px;
      --space-6: 48px;
      
      --radius-sm: 6px;
      --radius-md: 10px;
      --radius-lg: 12px;
      
      --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
      --shadow-md: 0 4px 6px rgba(0,0,0,0.15);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: var(--font-body);
      color: var(--text);
      background-color: var(--bg);
      line-height: 1.6;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-3);
    }

    .header {
      background-color: var(--bg);
      border-bottom: 1px solid var(--surface);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: var(--space-3) var(--space-3);
      max-width: 1200px;
      margin: 0 auto;
    }

    .brand-link {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--brand);
      text-decoration: none;
    }

    .nav-links {
      display: flex;
      list-style: none;
      gap: var(--space-5);
    }

    .nav-link {
      color: var(--text);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    .nav-link:hover {
      color: var(--brand);
    }

    .hero {
      padding: var(--space-6) 0;
      text-align: center;
      background-color: var(--surface);
    }

    .hero-title {
      font-family: var(--font-heading);
      font-size: 3rem;
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-4);
      line-height: 1.2;
    }

    .hero-description {
      font-size: 1.25rem;
      color: var(--muted);
      max-width: 600px;
      margin: 0 auto;
    }

    .content {
      padding: var(--space-6) 0;
    }

    .content-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: var(--space-5);
      margin-bottom: var(--space-6);
    }

    .blog-card {
      background-color: var(--bg);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-sm);
      overflow: hidden;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .blog-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .blog-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .blog-content {
      padding: var(--space-4);
    }

    .blog-title {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-3);
      line-height: 1.3;
    }

    .blog-excerpt {
      color: var(--muted);
      margin-bottom: var(--space-4);
      font-size: 0.95rem;
    }

    .blog-meta {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      margin-bottom: var(--space-4);
    }

    .author-avatar {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      object-fit: cover;
    }

    .author-name {
      font-size: 0.9rem;
      color: var(--muted);
      font-weight: 500;
    }

    .read-more {
      color: var(--brand);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.95rem;
    }

    .read-more:hover {
      color: var(--brand-alt);
    }

    .event-section {
      margin-bottom: var(--space-6);
    }

    .event-card {
      background-color: var(--surface);
      border-radius: var(--radius-lg);
      padding: var(--space-6);
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: var(--space-6);
      align-items: center;
    }

    .event-title {
      font-family: var(--font-heading);
      font-size: 2rem;
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-3);
    }

    .event-date {
      color: var(--brand);
      font-weight: 500;
      margin-bottom: var(--space-3);
    }

    .event-description {
      color: var(--muted);
      margin-bottom: var(--space-4);
    }

    .highlights-title, .speakers-title {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-3);
    }

    .highlights-list {
      list-style: none;
      margin-bottom: var(--space-4);
    }

    .highlights-list li {
      color: var(--muted);
      padding: var(--space-1) 0;
      position: relative;
      padding-left: var(--space-4);
    }

    .highlights-list li:before {
      content: "•";
      color: var(--brand);
      position: absolute;
      left: 0;
    }

    .speakers-grid {
      display: flex;
      gap: var(--space-4);
    }

    .speaker {
      display: flex;
      align-items: center;
      gap: var(--space-3);
    }

    .speaker-avatar {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
    }

    .speaker-name {
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-1);
    }

    .speaker-title {
      font-size: 0.9rem;
      color: var(--muted);
    }

    .event-image {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: var(--radius-md);
    }

    .newsletter {
      text-align: center;
    }

    .newsletter-card {
      background-color: var(--surface);
      border-radius: var(--radius-lg);
      padding: var(--space-6);
    }

    .newsletter-title {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text);
      margin-bottom: var(--space-4);
    }

    .newsletter-form {
      display: flex;
      gap: var(--space-3);
      justify-content: center;
      align-items: center;
      max-width: 400px;
      margin: 0 auto;
    }

    .email-input {
      flex: 1;
      padding: var(--space-2) var(--space-3);
      border: 1px solid var(--surface);
      border-radius: var(--radius-md);
      font-size: 1rem;
      background-color: var(--bg);
      color: var(--text);
    }

    .email-input:focus {
      outline: none;
      border-color: var(--brand);
    }

    .button {
      display: inline-block;
      padding: var(--space-2) var(--space-3);
      border-radius: var(--radius-md);
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
      border: none;
      cursor: pointer;
      height: 43px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .button.primary {
      background-color: var(--brand);
      color: var(--bg);
    }

    .button.primary:hover {
      background-color: var(--brand-alt);
    }

    .footer {
      padding: var(--space-5) 0;
      background-color: var(--brand);
      text-align: center;
    }

    .footer-text {
      color: var(--bg);
    }

    @media (max-width: 768px) {
      .nav {
        flex-direction: column;
        gap: var(--space-3);
      }

      .nav-links {
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--space-3);
      }

      .hero-title {
        font-size: 2rem;
      }

      .content-grid {
        grid-template-columns: 1fr;
      }

      .event-card {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .event-title {
        font-size: 1.5rem;
      }

      .newsletter-form {
        flex-direction: column;
        width: 100%;
      }

      .email-input {
        width: 100%;
      }
    }
  </style>
</body>
</html>