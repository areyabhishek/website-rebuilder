// Production schema for PostgreSQL (Vercel, Render, Railway)

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  supabaseId    String   @unique
  credits       Int      @default(2) // 2 free sites
  jobs          Job[]
  transactions  Transaction[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Job {
  id           String   @id @default(cuid())
  domain       String
  designDomain String?
  designLanguage String?
  status       String
  category     String?
  pages        Page[]
  blueprintUrl String?
  tokensUrl    String?
  componentsUrl String?
  issueNumber  Int?
  prUrl        String?
  previewUrl   String?
  deploymentId String?
  userId       String?  // Link to user
  user         User?    @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Float    // Amount in USD
  credits     Int      // Number of credits purchased
  paymentId   String   // Dodo Payments transaction ID
  status      String   // pending, completed, failed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Page {
  id    String  @id @default(cuid())
  jobId String
  url   String
  title String?
  md    String?
  html  String?

  Job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, url])
}
